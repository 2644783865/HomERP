@model HomERP.WebUI.Models.FamilyViewModels.FamilyOverviewVM

<h2>Rodzina</h2>
@if (Model.Family == null)
{
    <div class="panel">
        <div class="panel-heading">Uwaga</div>
        <div class="panel-body">Nie należysz jeszcze do żadnej rodziny. Aby dołączyc do istniejącej, musisz otrzymać zaproszenie.
        Możesz także utworzyć własną rodzinę.</div>
        <div class="panel-footer"><a asp-controller="Family" asp-action="New" class="btn btn-default">Utwórz rodzinę...</a></div>
    </div>
}
else
{
    <h3>Nazwa: @Model.Family.Name</h3>
    <span>@Model.Family.Description</span>
    <hr />
    <span>Członkowie rodziny:</span>
    <hr />
    @foreach (var member in Model.FamilyMembers)
    {
        @member.UserName
        <br />
    }
}

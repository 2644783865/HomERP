@using Microsoft.AspNetCore.Identity
@using HomERP.Domain.Authentication

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">..::@UserManager.GetUserName(User)
            @if (User.IsInRole("Administrator"))
            {
                <span>(administrator)</span>
            }
        ::..</a>
        </li>
        <li>
        <a asp-area="" asp-controller="Account" asp-action="Logout" title="Wyloguj">Wyloguj się</a>
    </li>


@model IndexViewModel
@{
    ViewData["Title"] = "Zarządzanie kontem";
}

<h2>@ViewData["Title"]</h2>
@if (!string.IsNullOrWhiteSpace(@ViewData["StatusMessage"].ToString()))
{
    <p class="alert alert-success alert-dismissable"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>@ViewData["StatusMessage"]</p>
}

<div>
    <h4>Zmień swoje dane</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt><label asp-for="@Model.UserName"></label>:</dt>
        <dd>
            @Model.UserName
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt><label asp-for="@Model.Email"></label>:</dt>
        <dd>
            @Model.Email <a asp-controller="Manage" asp-action="ChangeEmail" class="btn btn-primary btn-sm">Zmień</a>
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Hasło:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn btn-primary btn-sm">Zmień</a>
            }
            else
            {
                        <a asp-controller="Manage" asp-action="SetPassword" class="btn btn-primary btn-sm">Utwórz</a>
            }
        </dd>
    </dl>
</div>
